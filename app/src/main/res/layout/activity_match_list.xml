<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MatchList">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/classic_white"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="@dimen/guillotine_actionbar_background_view_height" />


        <LinearLayout
            android:id="@+id/matchLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="379dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/noMatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:lineSpacingExtra="36sp"
                android:text="NO MATCHES"
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="@color/classic_black"
                android:textSize="36sp"
                android:typeface="sans" />

            <ListView
            android:id="@+id/matchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            tools:layout_editor_absoluteX="338dp"
            tools:layout_editor_absoluteY="658dp" />


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/bottom_sheet" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>